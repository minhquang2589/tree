<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controller.admin.voucher.UploadController"
            prefHeight="500.0" prefWidth="600.0"
            style="-fx-background-color: #f0f4f7;">

    <Label text="Upload Voucher Details" layoutX="20.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label text="Voucher Code:" layoutX="20.0" layoutY="230.0" />
    <TextField fx:id="voucherCodeField" layoutX="120.0" layoutY="225.0" prefWidth="300.0" />
    <Label text="Voucher Quantity:" layoutX="20.0" layoutY="270.0" />
    <TextField fx:id="voucherQuantityField" layoutX="120.0" layoutY="265.0" prefWidth="300.0" />
    <Label text="Discount Percentage:" layoutX="20.0" layoutY="310.0" />
    <TextField fx:id="voucherPercentageField" layoutX="180.0" layoutY="305.0" prefWidth="240.0" />
    <Label text="Start Date:" layoutX="20.0" layoutY="350.0" />
    <DatePicker fx:id="startDatePicker" layoutX="120.0" layoutY="345.0" prefWidth="300.0" />
    <Label text="End Date:" layoutX="20.0" layoutY="390.0" />
    <DatePicker fx:id="endDatePicker" layoutX="120.0" layoutY="385.0" prefWidth="300.0" />
    <Button text="Upload" layoutX="120.0" layoutY="430.0" onAction="#handleUpload"
            style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
</AnchorPane>
