<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controller.admin.category.CategoryController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #f0f4f7;">
    <stylesheets>
        <URL value="@../../../../../styleCss/customStyle.css"/>
    </stylesheets>

    <VBox alignment="center" spacing="25" AnchorPane.topAnchor="30" AnchorPane.leftAnchor="30" AnchorPane.rightAnchor="30" AnchorPane.bottomAnchor="30">
        <Label text="Add New Category" textFill="#2c3e50">
            <font>
                <Font name="Arial" size="30" />
            </font>
        </Label>
        <HBox spacing="20" alignment="center_left">
            <Label text="Tên phân loại:" textFill="#34495e" prefWidth="150">
                <font>
                    <Font name="Arial" size="16" />
                </font>
            </Label>
            <TextField fx:id="categoryField" promptText="Enter category name" prefWidth="300" />
        </HBox>
        <HBox spacing="20" alignment="center_left">
            <Label text="Ảnh :" textFill="#34495e" prefWidth="150">
                <font>
                    <Font name="Arial" size="16" />
                </font>
            </Label>
            <Button text="Chọn ảnh" onAction="#handleBrowse" textFill="white"
                    styleClass="edit-button" prefWidth="100" />
        </HBox>
        <HBox spacing="20" alignment="center_left">
            <Label text="Ảnh đã chọn:" textFill="#34495e" prefWidth="150">
                <font>
                    <Font name="Arial" size="16" />
                </font>
            </Label>
            <ImageView fx:id="imageView" fitWidth="100" fitHeight="100" style="-fx-border-color: #34495e; -fx-border-width: 1px; -fx-padding: 5;" />
        </HBox>
        <HBox spacing="20" alignment="center_left">
            <Label text="Chi tiết:" textFill="#34495e" prefWidth="150">
                <font>
                    <Font name="Arial" size="16" />
                </font>
            </Label>
            <TextArea fx:id="descriptionField" promptText="Thêm chi tiết cho phân loại hàng" prefWidth="300" prefHeight="100" wrapText="true"/>
        </HBox>
        <HBox spacing="10" alignment="center">
            <Button text="Tải lên" onAction="#handleSubmit" textFill="white"
                    styleClass="edit-button" prefWidth="150" style="-fx-background-color: #2980b9; -fx-font-size: 16px;" />
        </HBox>
    </VBox>
</AnchorPane>
