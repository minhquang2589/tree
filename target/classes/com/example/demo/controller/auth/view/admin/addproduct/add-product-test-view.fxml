<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo.controller.admin.addproduct.AddProductTestController"
            prefWidth="1000"    prefHeight="700.0" style="-fx-background-color: #fafafa;">

    <Label text="Add New Product" layoutX="150.0" layoutY="20.0" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <ScrollPane layoutX="50.0" layoutY="60.0"  prefWidth="1000"   prefHeight="600.0"  style="-fx-background-color: transparent;">
        <VBox spacing="20" alignment="CENTER">

            <HBox spacing="10">
                <Label text="Product Name:" style="-fx-font-size: 14px; -fx-font-weight: bold;" prefWidth="150.0"/>
                <TextField fx:id="nameField" prefWidth="350.0" promptText="Enter product name" />
            </HBox>

            <HBox spacing="10">
                <Label text="Description:" style="-fx-font-size: 14px; -fx-font-weight: bold;" prefWidth="150.0"/>
                <TextArea fx:id="descriptionField" prefWidth="350.0" prefHeight="100.0" promptText="Enter product description"/>
            </HBox>

            <GridPane hgap="15" vgap="15" alignment="CENTER" style="-fx-padding: 10;">
                <Label text="Discount Quantity:" style="-fx-font-size: 14px; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="discountQuantityField" promptText="Enter quantity" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Discount (%)" style="-fx-font-size: 14px; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="discountPercentageField" promptText="Enter discount percentage" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Start Date:" style="-fx-font-size: 14px; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <DatePicker fx:id="startDatePicker" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="End Date:" style="-fx-font-size: 14px; -fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <DatePicker fx:id="endDatePicker" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            </GridPane>

            <HBox spacing="10">
                <Label text="Category:" style="-fx-font-size: 14px; -fx-font-weight: bold;" prefWidth="150.0"/>
                <TextField fx:id="categoryField" prefWidth="350.0" promptText="Enter product category" />
            </HBox>

            <HBox spacing="10">
                <CheckBox fx:id="isNewCheckBox" text="Is this product new?" />
            </HBox>

            <HBox spacing="10">
                <Label text="Product Images:" style="-fx-font-size: 14px; -fx-font-weight: bold;" prefWidth="150.0"/>
                <ListView fx:id="imageListView" prefWidth="350.0" prefHeight="100.0"/>
            </HBox>
            <Button text="Add Image" layoutX="150.0" layoutY="510.0" onAction="#handleAddImage" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

            <VBox fx:id="sizesVBox" spacing="10" prefWidth="500.0" style="-fx-background-color: #f4f4f4; -fx-padding: 10px;">
            </VBox>
            <Button text="Add Size" layoutX="150.0" layoutY="560.0" onAction="#handleAddSize" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

            <Button text="Add Product" layoutX="250.0" layoutY="620.0" onAction="#handleAddProduct" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        </VBox>
    </ScrollPane>
</AnchorPane>
